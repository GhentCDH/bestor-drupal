# ============================================================================
# DRUPAL DOCKER TEMPLATE - Environment Configuration
# ============================================================================
# This file is customized for your project
# See .env.example for all available options
# ============================================================================

# ----------------------------------------------------------------------------
# PROJECT SETTINGS - CUSTOMIZE FOR EACH PROJECT
# ----------------------------------------------------------------------------
PROJECT_NAME=ghentcdh-bestor
PHP_VERSION=8.3

# ----------------------------------------------------------------------------
# PORT CONFIGURATION
# ----------------------------------------------------------------------------
WEB_PORT=8080
DB_PORT=3306
MEMCACHE_PORT=11211

# ----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# ----------------------------------------------------------------------------
DB_NAME=bestor
DB_USER=user
DB_PASSWORD=admin123
DB_ROOT_PASSWORD=root_password
DB_HOST=db
DB_PORT_INTERNAL=3306
MYSQL_MAX_ALLOWED_PACKET=268435456  # 256M

# ----------------------------------------------------------------------------
# DRUPAL CONFIGURATION
# ----------------------------------------------------------------------------
DRUPAL_SITE_NAME="Bestor"
# DRUPAL_HASH_SALT="change_this_to_random_string_for_security"
DRUPAL_RUN_CONFIG_IMPORT=true
DRUPAL_RUN_COMPOSER=true

# ----------------------------------------------------------------------------
# PHP CONFIGURATION
# ----------------------------------------------------------------------------
PHP_MEMORY_LIMIT=1024M
PHP_MAX_EXECUTION_TIME=300
PHP_POST_MAX_SIZE=128M
PHP_UPLOAD_MAX_FILESIZE=128M
PHP_DISPLAY_ERRORS=0
PHP_OPCACHE_MEMORY_CONSUMPTION=256
PHP_OPCACHE_MAX_ACCELERATED_FILES=20000
PHP_OPCACHE_VALIDATE_TIMESTAMPS=0

# ----------------------------------------------------------------------------
# ENVIRONMENT TYPE
# ----------------------------------------------------------------------------
ENVIRONMENT=development

# ----------------------------------------------------------------------------
# SEARCH API CONFIGURATION
# ----------------------------------------------------------------------------
SEARCH_API_SERVER_HOST=bestor-elasticsearch-dev
SEARCH_API_SERVER_PORT=9200
SEARCH_API_SCHEME=http
SEARCH_API_INDEX_PREFIX=${PROJECT_NAME}

# ----------------------------------------------------------------------------
# MEMCACHE CONFIGURATION
# ----------------------------------------------------------------------------
# Memcache server host changes based on environment
# Development: {PROJECT_NAME}-memcache-dev
# Production: {PROJECT_NAME}-memcache-prd
MEMCACHE_HOST=bestor-memcache-dev
