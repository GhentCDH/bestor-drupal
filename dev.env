DB_NAME=bestor
DB_USER=user
DB_PASSWORD=admin123
DB_ROOT_PASSWORD=root_password
DB_HOST=db

# ----------------------------------------------------------------------------
# DRUPAL CONFIGURATION
# ----------------------------------------------------------------------------
