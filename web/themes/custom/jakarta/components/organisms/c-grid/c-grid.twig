{#
/**
 * @file
 * Template for the component c-grid.
 */
#}

{% extends '@jakarta/components/_skeleton/component-base.html.twig' %}

{% set component_name = 'c-grid' %}


{% set custom_component_classes = [
]|merge(c_grid_utility_classes ?: []) %}

{% block component_content %}
  <div class="{{ component_name }}__inner container">
    <div class="{{ component_name }}__wrapper">

      {% if title %}
        <div class="{{ component_name }}__tag">
          {{ title }}
        </div>
      {% endif %}

      {% if grid_items %}
        <div class="{{ component_name }}__grid-items">
          {% for key, item in grid_items %}
            <div class="{{ component_name }}__grid-items__item">
              {{ item }}
            </div>
          {% endfor %}
        </div>
      {% endif %}

    </div>
  </div>
{% endblock %}
