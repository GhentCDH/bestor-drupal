{#
/**
 * @file
 * Template for the component c-lines-box.
 */
#}

{% extends '@jakarta/components/_skeleton/component-base.html.twig' %}

{% set component_name = 'c-lines-box' %}
{% set custom_component_classes = c_lines_box_utility_classes %}

{% block component_content %}
  <div class="{{ component_name }}__wrapper container">
    <div class="{{ component_name }}__inner">
      {% if title %}
        <div class="{{ component_name }}__title">
          {{ include('jakarta:c-heading', {
            content: title,
          }, with_context = false) }}
        </div>
      {% endif %}
      {% if lines %}
        <div class="{{ component_name }}__lines">
          {{ lines }}
        </div>
      {% endif %}
    </div>
  </div>
{% endblock %}
