    html_tag: 'a',
    attr_variant: 'default',
    color: 'primary',
    title: 'Suggestion',
  }, with_context = false) }}
  {{ include('jakarta:c-button', {
    html_tag: 'a',
    attr_variant: 'default',
    color: 'primary',
    title: 'Quote',
  }, with_context = false) }}
{% endset %}
{% set table_of_contents %}
  {% set dropdown_items %}
    <ul class="links">
      <li><a href="#">Titel 1</a></li>
      <li><a href="#">Titel 2</a></li>
      <li><a href="#">Titel 3</a></li>
    </ul>
