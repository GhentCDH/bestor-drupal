  {{ include('jakarta:c-dropdown', {
    toggle: 'Inhoudstafel',
    dropdown_items,
  }, with_context = false) }}
{% endset %}
{% set related_items %}
  {% set items %}
    <ul class="links">
      <li><a href="#">Naam concept</a> (type relatie)</li>
      <li><a href="#">Naam concept</a> (type relatie)</li>
      <li><a href="#">Naam concept</a> (type relatie)</li>
    </ul>
  {% endset %}
  {{ include('jakarta:c-related-items', {
    title: 'Related items',
    items,
  }, with_context = false) }}
  {% set items_2 %}
    <ul class="links">
      <li><a href="#">Naam document</a> (type relatie)</li>
      <li><a href="#">Naam document</a> (type relatie)</li>
      <li><a href="#">Naam document</a> (type relatie)</li>
    </ul>
  {% endset %}
  {{ include('jakarta:c-related-items', {
    title: 'Related items',
    items: items_2,
  }, with_context = false) }}
{% endset %}
{{ include('jakarta:c-lemma-sidebar', {
  buttons,
  table_of_contents,
  related_items,
}, with_context = false) }}