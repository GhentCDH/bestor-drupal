{% set c_attributes = create_attribute(c_attributes|default({})) %}

{% set c_name = "c-column" %}

{% set classes = [
  c_name,
  'trigger-hover'
] %}

{% set element = link ? 'a' : 'div' %}
{% if link %}
  {% set attributes = c_attributes.setAttribute('href', link) %}
{% endif %}

<{{ element }} {{ c_attributes.addClass(classes) }}>
  {% if media %}
    <div class="{{ c_name ~ '__media' }}">
      {{ media }}
    </div>
  {% endif %}
  <div class="{{ c_name ~ '__bottom' }}">
    <div class="{{ c_name ~ '__content' }}">
      {% if title %}
        <div class="{{ c_name ~ '__title h-margin-children-none' }}">
          {{ title }}
        </div>
      {% endif %}
      {% if text %}
        <div class="{{ c_name ~ '__text h-text-wysiwyg' }}">
          {{ text }}
        </div>
      {% endif %}
    </div>
    {% if link_text %}
      <div class="c-btn c-btn--type-inline">{{ link_text }}</div>
    {% endif %}
  </div>
</{{ element }}>
