{#
/**
 * @file
 * Template for the component c-related-items.
 */
#}

{% extends '@jakarta/components/_skeleton/component-base.html.twig' %}

{% set component_name = 'c-related-items' %}
{% set custom_component_classes = c_related_items_utility_classes %}

{% block component_content %}
  {% if title %}
    <div class="{{ component_name }}__title">
      {{ include('jakarta:c-heading', {
        content: title,
        heading_tag: 'h4',
        heading_class: 'h4',
      }, with_context = false) }}
    </div>
  {% endif %}
  {% if items %}
    <div class="{{ component_name }}__items">
      {{ items }}
    </div>
  {% endif %}
{% endblock %}
