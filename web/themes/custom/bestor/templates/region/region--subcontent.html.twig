{#
/**
 * @file
 * Default theme implementation to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region <div>.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 *
 * @ingroup themeable
 */
#}

{% if bestor('page_variant') == 'lemma' %}
 {% set publs = bestor('field_values', null, 'field_publications') %}
  {% if publs %}
    {% set lines %}
      {% for publ in publs %}
        {{ include('jakarta:c-line', {
          url: NULL,
          title: publ,
          attr_variant: 'default',
        }, with_context = false) }}
      {% endfor %}
    {% endset %}
    {{ include('jakarta:c-lines-box', {
      title: 'Publications'|t,
      lines,
    }, with_context = false) }}
  {% endif %}
   
  
  {% if footnote_count %}
    {% set fns = drupal_block('footnotes_group') %}
      
    {% if fns %}
      {{ include('jakarta:c-references', {
        title: 'Footnotes'|t,
        references: fns,
      }, with_context = false) }}
    {% endif %}
  {% endif %}
 
  {% set refs = bestor('field_values', null, 'field_references') %}
  {% if refs %}
    {{ include('jakarta:c-references', {
      title: 'References'|t,
      references: refs,
    }, with_context = false) }}
  {% endif %}
{% else %}

  {% if content %}
    {{ content }}
  {% endif %}
{% endif %}