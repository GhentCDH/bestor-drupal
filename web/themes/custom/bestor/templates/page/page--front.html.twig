{#
/**
 * @file
 * Seven's theme implementation to display a single Drupal page.
 *
 * The doctype, html, head, and body tags are not in this template. Instead
 * they can be found in the html.html.twig template normally located in the
 * core/modules/system directory.
 *
 * Available variables:
 *
 * General utility variables:
 * - base_path: The base URL path of the Drupal installation. Will usually be
 *   "/" unless you have installed Drupal in a sub-directory.
 * - is_front: A flag indicating if the current page is the front page.
 * - logged_in: A flag indicating if the user is registered and signed in.
 * - is_admin: A flag indicating if the user has permission to access
 *   administration pages.
 *
 * Site identity:
 * - front_page: The URL of the front page. Use this instead of base_path when
 *   linking to the front page. This includes the language domain or prefix.
 *
 * Page content (in order of occurrence in the default page.html.twig):
 * - node: Fully loaded node, if there is an automatically-loaded node
 *   associated with the page and the node ID is the second argument in the
 *   page's path (e.g. node/12345 and node/12345/revisions, but not
 *   comment/reply/12345).
 *
 * Regions:
 * - page.navigation: Items for the header region.
 * - page.header: Items for the header region.
 * - page.precontent: Items for the pre-content region.
 * - page.breadcrumb: Items for the breadcrumb region.
 * - page.help: Dynamic help text, mostly for admin pages.
 * - page.content: The main content of the current page.
 * - pae.subcontent: Items for the subcontent region.
 *
 * @see template_preprocess_page()
 * @see html.html.twig
 */
#}

{% set cta_news %}
  {{ include('jakarta:c-button', {
    html_tag: 'a',
    attr_variant: 'default',
    color: 'primary',
    title: bestor('more_news_label'),
    url: path('view.announcements.page_2')
  }, with_context = false) }}
{% endset %}
{% set cta_events %}
  {{ include('jakarta:c-button', {
    html_tag: 'a',
    attr_variant: 'default',
    color: 'primary',
    title: bestor('more_events_label'),
    url: path('view.announcements.page_3')
  }, with_context = false) }}
{% endset %}
{% set cta_publications %}
  {{ include('jakarta:c-button', {
    html_tag: 'a',
    attr_variant: 'default',
    color: 'primary',
    title: bestor('more_publications_label'),
    url: path('view.announcements.page_4')
  }, with_context = false) }}
{% endset %}
{% set tabs %}
  {% set tab_items = {
    'tab': {
      'title': bestor('news_title'),
      'id': 'news',
      'content': drupal_view('frontpage', 'block_1'),
      'cta': cta_news
    },
    'tab_2': {
      'title': bestor('events_title'),
      'id': 'events',
      'content': drupal_view('frontpage', 'block_2'),
      'cta': cta_events      
    },
    'tab_3': {
      'title': bestor('publications_title'),
      'id': 'publications',
      'content': drupal_view('frontpage', 'block_3'),
      'cta': cta_publications
    }
  } %}
    {{ include('jakarta:c-tabs', {
      tab_items,
    }, with_context = false) }}
{% endset %}

{{ include('jakarta:c-page-header', {
  c_page_header_utility_classes: ['header'],
}) }}

<div class="page">
  <main class="content" role="main">
    <div class="main">
      <div class="visually-hidden"><a id="main-content" tabindex="-1"></a></div>
      {% if page.help %}
        <div class="help">
            {{ page.help }}
        </div>
      {% endif %}
      {%- if page.sidebar %}
        <div class="page-content-wrapper container">
          <div class="page-sidebar">
            {{ page.sidebar }}
          </div>
      {% endif %}
      <div class="page-content">
        {{ include('jakarta:c-search', {
          title: bestor('homepage_banner_title'),
          form: drupal_entity('block', 'bestor_exposedformsearchpage_1'), 
          links: bestor('facet_buttons', 'database', 'facets_tax_discipline__int', 'discipline', 'page_1'),
          footnote: bestor('banner_subtitle')
        })}}
        {{ include('jakarta:c-announcements', {
          title: bestor('announcements_title'),
          tabs,
          sidebar: drupal_view('frontpage', 'block_5'),
        }, with_context = false) }}
        {{ page.content }}
        {{ drupal_view('frontpage', 'block_4') }}
      </div>
      {% if page.sidebar %}</div>{% endif %}
    </div>
  </main>
  {% if page.subcontent %}
    <div class="page-subcontent">
      {{ page.subcontent }}
    </div>
  {% endif %}
</div>

{{ include('@bestor/layout/footer.html.twig', _context|merge({
  footer_1: page.footer_1,
  footer_2: page.footer_2,
  footer_3: page.footer_3,
  footer_4: page.footer_4,
  footer: page.footer,
}), with_context = false) }}

{{ include('jakarta:c-page-overlay') }}
